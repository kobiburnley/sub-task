{
  "compilerOptions": {
    "experimentalDecorators": true,
    "allowJs": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "removeComments": true,
    "noImplicitReturns": true,
    "lib": [
      "es5",
      "es2015.collection",
      "es2015.promise",
      "es2015.core"
    ],
    "target": "es5",
    "declaration": true,
    "outDir": "build",
    "jsx": "react",
    "importHelpers": true,
    "skipLibCheck": true,
    "strict": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@revdesk/base-types": [
        "packages/base-types/src"
      ]
    }
  },
  "include": [
    "src/**/*.ts*"
  ]
}
